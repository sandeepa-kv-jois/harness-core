{
  "type": "object",
  "required": [
    "identifier",
    "name",
    "type"
  ],
  "properties": {
    "delegateSelectors": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "string",
          "pattern": "^<\\+input>((\\.)((executionInput\\(\\))|(allowedValues|default|regex)\\(.+?\\)))*$",
          "minLength": 1
        }
      ]
    },
    "description": {
      "type": "string"
    },
    "failureStrategies": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/cd/FailureStrategyConfig"
      }
    },
    "identifier": {
      "type": "string",
      "pattern": "^[a-zA-Z_][0-9a-zA-Z_$]{0,63}$"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z_][-0-9a-zA-Z_\\s]{0,63}$"
    },
    "strategy": {
      "$ref": "#/definitions/cd/StrategyConfig"
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "type": {
      "type": "string",
      "enum": [
        "Deployment"
      ]
    },
    "variables": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/cd/NumberNGVariable"
          },
          {
            "$ref": "#/definitions/cd/SecretNGVariable"
          },
          {
            "$ref": "#/definitions/cd/StringNGVariable"
          }
        ]
      }
    },
    "when": {
      "$ref": "#/definitions/cd/StageWhenCondition"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "Deployment"
          }
        }
      },
      "then": {
        "properties": {
          "spec": {
            "$ref": "#/definitions/cd/DeploymentStageConfig"
          }
        }
      }
    }
  ],
  "definitions": {
    "cd": {
      "DeploymentStageConfig": {
        "type": "object",
        "required": [
          "execution"
        ],
        "properties": {
          "deploymentType": {
            "type": "string",
            "enum": [
              "Kubernetes",
              "NativeHelm",
              "Ssh",
              "WinRm",
              "ServerlessAwsLambda",
              "AzureWebApp"
            ]
          },
          "environment": {
            "$ref": "#/definitions/cd/EnvironmentYamlV2"
          },
          "environmentGroup": {
            "$ref": "#/definitions/cd/EnvironmentGroupYaml"
          },
          "execution": {
            "$ref": "#/definitions/cd/ExecutionElementConfig"
          },
          "gitOpsEnabled": {
            "type": "boolean"
          },
          "infrastructure": {
            "$ref": "#/definitions/cd/PipelineInfrastructure"
          },
          "service": {
            "$ref": "#/definitions/cd/ServiceYamlV2"
          },
          "serviceConfig": {
            "$ref": "#/definitions/cd/ServiceConfig"
          }
        },
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    }
  }
}