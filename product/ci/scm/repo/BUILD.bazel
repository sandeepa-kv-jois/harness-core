)

go_test(
    name = "repo_test",
    srcs = [
        "azure_test.go",
        "bitbucket_cloud_test.go",
        "bitbucket_server_test.go",
        "github_test.go",
        "gitlab_test.go",
        "repo_test.go",
    ],
    data = [
        "testdata/webhook.json",
        "testdata/webhooks.json",
    ],
    embed = [":repo"],
    deps = [
        "//commons/go/lib/logs",
        "//product/ci/scm/proto",
        "@com_github_stretchr_testify//assert",
        "@org_uber_go_zap//:zap",
    ],
