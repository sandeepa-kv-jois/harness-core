go_test(
    name = "client_test",
    srcs = ["scm_client_test.go"],
    embed = [":client"],
    deps = [
        "//commons/go/lib/logs",
        "@com_github_stretchr_testify//assert",
        "@org_uber_go_zap//:zap",
    ],
)
